extends ../layout

block content
  .container
    h1.page-title 管理员登录
    if error
      .error-message= error
    form(method="POST" action="/admin/login" class="form-inline")
      input(type="hidden" name="_csrf" value=csrfToken)
      .form-group
        input(type="password" name="password" placeholder="密码" required)
      button.btn(type="submit") 登录
